{
  "name": "graphql-server-setup",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Alex Alonso <alex4551@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && webpack --config webpack.config.js --progress --profile --bail",
    "start": "node ./dist/index.js",
    "test": "mocha --opts ./mocha.opts",
    "test:coverage": "nyc yarn test",
    "test:coverage:showReport": "yarn test:coverage && open coverage/index.html",
    "test:coveralls": "yarn test:coverage | coveralls",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/dotenv": "^4.0.0",
    "@types/express": "^4.0.36",
    "@types/express-graphql": "^0.0.33",
    "@types/graphql": "^0.9.3",
    "@types/mocha": "^2.2.41",
    "awesome-typescript-loader": "^3.2.1",
    "babili-webpack-plugin": "^0.1.2",
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "source-map-support": "^0.4.15",
    "supertest": "^3.0.0",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.4.1",
    "webpack": "^3.3.0",
    "@types/helmet": "^0.0.35",
    "@types/supertest": "^2.0.1"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-graphql": "^0.6.6",
    "graphql": "^0.10.3",
    "helmet": "^3.6.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "text-lcov",
      "json",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
